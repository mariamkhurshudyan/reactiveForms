{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@shared/*": ["src/app/shared/*"],
      "@base/*": ["src/app/infrastructure/*"],
      "@app/*": ["src/app/*"],
      "@env/*": ["src/environments/*"],
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
